#:kivy 1.0.9
#:import Button kivy.uix.button.Button
<ConfigScreen>:
    text_input: text_input
    space_widget: space_widget
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: 'Load'
                on_release: root.show_load()
            Button:
                text: 'Save'
                on_release: root.show_save()
            Button:
                text: 'Ok'
                on_press: root.ok_pressed()
            Button:
                text: 'Cancel'
                on_release: root.manager.current = 'menu'
        BoxLayout:
            BoxLayout:
                # size_hint_x: None
                orientation: "vertical"
                size_hint_y: 1
                TextInput:
                    size_hint_y: 0.95
                    id: text_input
                    text: ''
                    height: app.window.height
                Button:
                    size_hint_y: 0.05
                    text: 'Praview'
                    on_release: root.show_praview()
            Space:
                index: 1000
                id: space_widget
            # RstDocument:
            #     text: text_input.text
            #     show_errors: True




# Setting dialog description
<SettingDialog>:
    gravity_slider: gravity_slider
    density_slider: density_slider
    speed_slider: speed_slider
    # zoom_slider: zoom_slider
    gravity_label: gravity_label
    density_label:density_label
    speed_label: speed_label
    # zoom_label: zoom_label
    numeric_combo: numeric_combo
    numeric_label: numeric_label
    BoxLayout:
        orientation: 'vertical'
        # padding: 10
        # spacing: 10
        
        BoxLayout
            Label:
                text: 'Numeric Method:'
            Label:
                text: ''
                id: numeric_label
        ComboEdit:
            size_hint: 0.8, 0.8
            # pos_hint: {'center':(0.1, 0.1)}
            height: 80
            options:
                [Button(text = str(x),\
                size_hint_y=None,\
                height=33)\
                for x in ('RungeKutta', 'VerletVelocity', 'Euler')]
            id: numeric_combo
        BoxLayout:
            Label:
                text: 'Gravity:'
            Label:
                text: ''
                id: gravity_label
        Slider:
            id: gravity_slider
            range: 0.000001, 180
        Widget:
            heigth: 5
        BoxLayout:
            Label:
                text: 'Density:'
            Label:
                text: ''
                id: density_label
        Slider:
            id: density_slider
            range: 0.000001, 100
        Widget:
            heigth: 5
        BoxLayout:
            Label:
                text: 'Animation speed'
            Label:
                text: ''
                id: speed_label
        Slider:
            id: speed_slider
            range: 1, 200
        # BoxLayout:
        #     Label:
        #         text: 'Zoom'
        #     Label:
        #         text: ''
        #         id: zoom_label
        # Slider:
        #     id: zoom_slider
        #     range: 1, 10
        Widget:
            heigth: 10
        
        BoxLayout:
            spacing: 10
        
            # Button:
            #     text: 'Help'
            #     bold: True
            #     background_normal: 'graphics/button_normal.png'
            #     background_down: 'graphics/button_down.png'
            #     font_size: 15
            #     size_hint: 1, 1.5
            #     on_release: root.display_help_screen()
                
            Button:
                id: close_button
                text: 'Ok'
                bold: True
                background_normal: 'graphics/button_normal.png'
                background_down: 'graphics/button_down.png'
                font_size: 15
                size_hint: 1, 1.5
                on_press: root.dismiss_parent()

<LoadDialog>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserListView:
            id: filechooser

        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                on_release: root.cancel()

            Button:
                text: "Load"
                on_release: root.load(filechooser.path, filechooser.selection)

<SaveDialog>:
    text_input: text_input
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserListView:
            id: filechooser
            on_selection: text_input.text = self.selection and self.selection[0] or ''

        TextInput:
            id: text_input
            size_hint_y: None
            height: 30
            multiline: False

        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                on_release: root.cancel()

            Button:
                text: "Save"
                on_release: root.save(filechooser.path, text_input.text)
<Menu>:
    BoxLayout:
        BoxLayout:
        BoxLayout:
            orientation: 'vertical'
            Image:
                source: 'graphics/logo.png'
                id: logo
            Button:
                width: 20
                anchor_x: 'center'
                anchor_y: 'top'
                text: 'Start'
                on_press: root.manager.current = 'gravity'
                width: 70
                height: 20

            Button:
                anchor_x: 'center'
                anchor_y: 'center'
                text: 'Load configuration'
                on_press: root.manager.current = 'configscreen'
                width: 70
                height: 20
            Button:
                anchor_x: 'center'
                anchor_y: 'center'
                text: 'Exit'
                on_press: app.stop()
                width: 70
                height: 20
            BoxLayout:
        BoxLayout:

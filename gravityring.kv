#:kivy 1.0.9
#
<Settings>:
    text_input: text_input

    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: 'Load'
                on_release: root.show_load()
            Button:
                text: 'Save'
                on_release: root.show_save()
            Button:
                text: 'Ok'
                on_release: root.manager.current = 'menu'

        BoxLayout:
            TextInput:
                id: text_input
                text: ''

            RstDocument:
                text: text_input.text
                show_errors: True

<LoadDialog>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserListView:
            id: filechooser

        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                on_release: root.cancel()

            Button:
                text: "Load"
                on_release: root.load(filechooser.path, filechooser.selection)

<SaveDialog>:
    text_input: text_input
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserListView:
            id: filechooser
            on_selection: text_input.text = self.selection and self.selection[0] or ''

        TextInput:
            id: text_input
            size_hint_y: None
            height: 30
            multiline: False

        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                on_release: root.cancel()

            Button:
                text: "Save"
                on_release: root.save(filechooser.path, text_input.text)
<Menu>:
    BoxLayout:
        BoxLayout:
        BoxLayout:
            orientation: 'vertical'
            Image:
                source: 'logo.png'
                id: logo
            Button:
                width: 20
                anchor_x: 'center'
                anchor_y: 'top'
                text: 'Start'
                on_press: root.manager.current = 'gravity'
                width: 70
                height: 20

            Button:
                anchor_x: 'center'
                anchor_y: 'center'
                text: 'Settings'
                on_press: root.manager.current = 'settings'
                width: 70
                height: 20
            Button:
                anchor_x: 'center'
                anchor_y: 'center'
                text: 'Exit'
                on_press: root.manager.current = 'settings'
                width: 70
                height: 20
            BoxLayout:
        BoxLayout:
<GravityRing>:
    
	pos: self.pos
	size: app.window.size
	
    Space:
        size: app.window.width-app.window.width/8.1, app.window.height-app.window.height/2.0
        size_hint: app.window.width-app.window.width/8.1, app.window.height-app.window.height/2.0
        center_x: app.window.width/2
	Image:
	    source: 'graphics/overlay.png'
        allow_stretch: True
        keep_ratio: False
        size: app.window.size
	# 
	# Image:
        # source: 'graphics/rails.png'
        # center_x: app.window.width/20
        # size_hint: None, None
        # height: app.window.height
	

        BoxLayout:
            orientation: 'vertical'
            spacing: 5
            padding: 10

            size: app.window.width/8, app.window.height/2.0
            right: app.window.width
            top: app.window.height

            Button:
                text: 'start'
                bold: True
                font_size: 17
                # background_normal: 'graphics/button_normal.png'
                # background_down: 'graphics/button_down.png'
                on_press: root.start_button_pressed()

            Button:
                text: 'stop'
                bold: True
                font_size: 17
                # background_normal: 'graphics/button_normal.png'
                # background_down: 'graphics/button_down.png'
                on_press: root.stop_button_pressed()
            Button:
                text: 'Reset'
                bold: True
                font_size: 17
                # background_normal: 'graphics/button_normal.png'
                # background_down: 'graphics/button_down.png'
                on_press: root.reset_button_pressed()
            ToggleButton:
                text: 'Draw velocity'
                id: velocity_switch
                on_press: root.drawvelocity_button_pressed()
	    
		
		
